<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:src="@drawable/check_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:layout_width="67dp"
        android:layout_height="57dp"
        android:layout_marginTop="266dp"
        android:layout_marginLeft="152dp"
        android:layout_marginRight="141dp"
        android:src="@drawable/inner_check_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:layout_width="225dp"
        android:layout_height="43dp"
        android:text="도착했습니다!"
        android:textColor="@color/black"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="67dp"
        android:layout_marginTop="376dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="67dp"></TextView>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="57dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="내가 지킨 흡연 문화\n깨끗한 학교를 만듭니다."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    <Button
        android:id="@+id/finishGuide"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:background="@drawable/light_green_radius_40"
        android:text="안내종료"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="645dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>