<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityViewActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="43.53dp"
        android:layout_height="33.18dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ku_default_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:layout_width="9.97dp"
        android:layout_height="10.01dp"
        android:src="@drawable/cigarette"
        android:layout_marginTop="18.44dp"
        android:layout_marginLeft="8.39dp"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"></ImageView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.47dp"
        android:layout_marginTop="16dp"
        android:text="글쓰기"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/anonymous_user_ic"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="익명"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/passed_days"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="09/26 16:53"
        android:textColor="@color/gray"
        android:textSize="17dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/community_title"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:text="공학관 흡연장 ㄹㅈㄷ"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/community_textArea"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="236dp"
        android:text="잘생긴 애들 다 전전 과잠 입고 있네"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/communityView_rv"
        android:layout_width="327dp"
        android:layout_height="267dp"
        android:layout_marginTop="315dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>







    <EditText
        android:id="@+id/comment"
        android:gravity="center"
        android:layout_width="327dp"
        android:layout_height="32dp"
        android:layout_marginBottom="45dp"
        android:hint="댓글을 입력하세요."
        android:textColorHint="@color/heavy_blue"
        android:textSize="10dp"
        android:background="@drawable/light_gray_radius_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></EditText>
    <ImageView
        android:id="@+id/inputBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/message_ic"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>