<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteOpinionActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="43.53dp"
        android:layout_height="33.18dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ku_default_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:layout_width="9.97dp"
        android:layout_height="10.01dp"
        android:src="@drawable/cigarette"
        android:layout_marginTop="18.44dp"
        android:layout_marginLeft="8.39dp"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"></ImageView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.47dp"
        android:layout_marginTop="16dp"
        android:text="의견 작성하기"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <EditText
        android:id="@+id/opinionArea"
        android:layout_width="314dp"
        android:layout_height="397dp"
        android:layout_marginTop="135dp"
        android:background="@drawable/light_green_radius_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <Button
        android:id="@+id/completeBtn"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:text="완료"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/green_radius_10"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>