<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AllOpinionActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60.21dp"
        android:layout_height="45.7dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ku_default_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:layout_width="13.78dp"
        android:layout_height="13.78dp"
        android:src="@drawable/cigarette"
        android:layout_marginTop="25.39dp"
        android:layout_marginLeft="11.61dp"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"></ImageView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25.79dp"
        android:layout_marginTop="28dp"
        android:text="SMOKU"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25.79dp"
        android:layout_marginTop="10dp"
        android:text="모든 의견 보기"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allOpinionList"
        android:layout_width="327dp"
        android:layout_height="512dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/button"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_marginBottom="27.74dp"
        android:text="의견 작성하기"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/green_radius_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>
    
</androidx.constraintlayout.widget.ConstraintLayout>